<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <LinearLayout
        android:layout_width="282dp"
        android:layout_height="361dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="38dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="176dp"
            android:layout_height="198dp"
            android:gravity="center"
            android:orientation="vertical"
            app:srcCompat="@android:drawable/ic_menu_gallery" />

        <Button
            android:id="@+id/añadirImagen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Añadir Imagen" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="326dp"
        android:layout_height="361dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="38dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <Space
            android:layout_width="355dp"
            android:layout_height="33dp" />

        <TextView
            android:id="@+id/textNombreUsuario"
            android:layout_width="135dp"
            android:layout_height="21dp"
            android:text="Nombre de usuario" />

        <EditText
            android:id="@+id/editNombreUsuario"
            android:layout_width="204dp"
            android:layout_height="41dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name" />

        <TextView
            android:id="@+id/textEmail2"
            android:layout_width="114dp"
            android:layout_height="23dp"
            android:text="Email" />

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="204dp"
            android:layout_height="41dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name" />

        <TextView
            android:id="@+id/textContraseña"
            android:layout_width="139dp"
            android:layout_height="26dp"
            android:text="Contraseña" />

        <EditText
            android:id="@+id/editContraseña1"
            android:layout_width="204dp"
            android:layout_height="41dp"
            android:ems="10"
            android:inputType="textPassword"
            android:text="Name" />

        <TextView
            android:id="@+id/textRepContraseña"
            android:layout_width="165dp"
            android:layout_height="25dp"
            android:text="Repetir Contraseña" />

        <EditText
            android:id="@+id/editContraseña2"
            android:layout_width="204dp"
            android:layout_height="41dp"
            android:ems="10"
            android:inputType="textPassword"
            android:text="Name" />

        <Button
            android:id="@+id/registrarse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrarse" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>