<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/labarra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="313dp"
        android:layout_height="381dp"
        android:layout_marginEnd="30dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fragment"
        app:layout_constraintHorizontal_bias="0.122"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tagDesordenadas"
            android:layout_width="304dp"
            android:layout_height="50dp"
            android:layout_marginTop="72dp"

            android:layout_marginBottom="20dp"
            android:background="@color/blue"
            android:backgroundTint="@color/blue"
            android:gravity="center"
            android:text="DESORDENADAS"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/green" />

        <Button
            android:id="@+id/botonJugar"
            android:layout_width="304dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:text="JUGAR" />

        <Button
            android:id="@+id/botonRanking"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="RANKING" />

        <Button
            android:id="@+id/botonInstrucciones"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="INSTRUCCIONES" />

        <Button
            android:id="@+id/botonSalir"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Salir" />

    </LinearLayout>


    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="365dp"
        android:layout_height="334dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout4"
        app:layout_constraintTop_toBottomOf="@+id/labarra">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <fragment
                android:id="@+id/fragment"
                android:name="com.example.practica1_desordenadas.FragmentRanking"
                android:layout_width="336dp"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="4dp" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>