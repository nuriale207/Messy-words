<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActividadMapa">

    <fragment
        android:id="@+id/fragmentoMapa"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="580dp"
        android:layout_height="252dp"
        app:layout_constraintBottom_toTopOf="@+id/botonEmpezarRuta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInstrucciones" />

    <TextView
        android:id="@+id/textNumPistas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/fragmentoMapa"
        app:layout_constraintEnd_toStartOf="@+id/textInstrucciones"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonEmpezarRuta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comenzar ruta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/otraRuta"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentoMapa" />

    <Button
        android:id="@+id/otraRuta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generar otra ruta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/botonEmpezarRuta"
        app:layout_constraintTop_toBottomOf="@+id/fragmentoMapa" />

    <TextView
        android:id="@+id/textInstrucciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/fragmentoMapa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textNumPistas"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>